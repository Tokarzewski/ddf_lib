<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab id="DDFTab" label="DDF Tools">
        <group id="DDFFileGroup" label="DDF Files">
          <button id="OpenDDFButton"
                  label="Open DDF"
                  size="large"
                  imageMso="FileOpen"
                  onAction="OnOpenDDFClick"
                  screentip="Open DDF File"
                  supertip="Open a DesignBuilder DDF file and load all tables into worksheets" />
          <button id="SaveDDFButton"
                  label="Save as DDF"
                  size="large"
                  imageMso="FileSaveAs"
                  onAction="OnSaveDDFClick"
                  screentip="Save as DDF File"
                  supertip="Save the current workbook as a DesignBuilder DDF file" />
        </group>
        <group id="DDFInfoGroup" label="Information">
          <button id="AboutButton"
                  label="About"
                  size="normal"
                  imageMso="Info"
                  onAction="OnAboutClick"
                  screentip="About DDF Tools"
                  supertip="Information about the DDF Tools add-in" />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>
